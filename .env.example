# Universal URL Shortener Configuration
# Copy this file to .env and modify as needed

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Application Settings
APP_NAME="Universal URL Shortener"
VERSION="1.0.0"

# Vercel Configuration (for production)
# Set these in Vercel environment variables
# VERCEL_URL=your-app.vercel.app
# BASE_URL=https://your-app.vercel.app

# URL Settings
BASE_URL=http://localhost:8000
SHORT_CODE_LENGTH=6

# Storage Settings
STORAGE_FILE=urls.json

# Security Settings
ALLOWED_HOSTS=["*"]

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_QR_CODES=true
ENABLE_CUSTOM_DOMAINS=false

# Optional: Custom Domain Settings
# CUSTOM_DOMAIN=yourdomain.com
# SSL_ENABLED=true

# Optional: Database Settings (future feature)
# DATABASE_URL=sqlite:///./urls.db

# Optional: Redis Settings (for caching)
# REDIS_URL=redis://localhost:6379

# Optional: Email Settings (for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
